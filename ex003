#Primeiro exercicio
nome = input('Qual é o seu nome?')
print('Ola', nome,'Seja bem vindo!')

#Segundo exercicio
print('Ola, digite sua data de nascimento nos campos abaixo, por favor!')
dia = input('Dia:')
mes = input('Mes:')
ano = input('Ano:')
print('Voce nasceu no dia', dia,'do mes de', mes, 'no ano de',ano    )

#Terceiro exercicio
print('Agora vamos dificultar as coisas')
nun1 = int(input('Coloque o primeiro numero para somar:'))
nun2 = int(input('Agora coloque o segundo numero:'))
soma = nun1 + nun2
#('A soma desses numeros é:',soma)
print('A soma vale {}'.format(soma))
